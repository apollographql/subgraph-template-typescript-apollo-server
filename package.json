{
  "name": "@apollo/typescript-repo-template",
  "private": true,
  "description": "A template for TypeScript projects with pre-configured tooling",
  "version": "0.0.0",
  "author": "Apollo <packages@apollographql.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apollographql/typescript-repo-template"
  },
  "homepage": "https://github.com/apollographql/typescript-repo-template#readme",
  "bugs": {
    "url": "https://github.com/apollographql/typescript-repo-template/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "build": "npm run generate && tsc --build tsconfig.build.json && npm run schema:copy-files",
    "clean": "git clean -dfqX",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run start\"",
    "generate": "concurrently npm:generate:*",
    "generate:resolver-types": "graphql-codegen",
    "generate:rest-api": "swagger-typescript-api -p ./BarStoreREST-API.yaml -o ./src/datasources -n BarAPI.ts --axios",
    "postinstall": "npm run build",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "schema:copy-files": "shx cp ./src/graphql/*.graphql ./dist/graphql",
    "schema:output": "node -e 'require(\"./dist/utils/schema\").writeSchema()'",
    "start": "npm run build && node dist/index.js",
    "test": "jest",
    "test:ci": "jest --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@apollo/subgraph": "2.0.2-alpha.2",
    "apollo-datasource": "latest",
    "apollo-server": "latest",
    "graphql": "latest",
    "graphql-tag": "latest",
    "node-fetch": "^3.2.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@types/jest": "27.4.1",
    "@types/node": "14.18.12",
    "@types/node-fetch": "^2.6.1",
    "concurrently": "^7.1.0",
    "jest": "27.5.1",
    "jest-junit": "13.1.0",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "shx": "^0.3.4",
    "swagger-typescript-api": "^9.3.1",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "volta": {
    "node": "16.14.2",
    "npm": "8.6.0"
  }
}
